<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@color/txt_white_gray" />

        <TextView
            android:id="@+id/tv_select_more_photo_video"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/list_item_container_padding"
            tools:ignore="UnusedAttribute"
            tools:text="@string/ted_image_picker_select_more_photo_video_fmt" />

        <TextView
            android:id="@+id/tv_grant_full_access_photo_video"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/list_item_container_padding"
            tools:ignore="UnusedAttribute"
            tools:text="@string/ted_image_picker_grant_full_access_photo_video_fmt" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/list_item_container_padding"
            android:text="@string/ted_image_picker_cancel"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>
</layout>
